<?xml version="1.0" encoding="UTF-8"?>
<form>
		<field type="list" label="MOD_HOTSPOTS_TYPE" name="hotspots_type" 
			description="MOD_SPECIFIES_THE_TYPE_OF_THE_HO" 
			default="info" class="input-small" >
			<option value="info">info</option>
			<option value="scene">scene</option>
		</field>
	<fieldset name="info-hot-spot" label="Info Hot Spot">
		<field type="text" label="MOD_HOTSPOTS_PITCH" name="hotspots_pitch" description="MOD_SPECIFIES_THE_PITCH_PORTION_" default="14.1" class="input-mini" />
		<field type="text" label="MOD_HOTSPOTS_YAW" name="hotspots_yaw" description="MOD_SPECIFIES_THE_YAW_PORTION_OF" default="1.5" class="input-mini" />
		<field type="text" label="MOD_HOTSPOTS_TEXT" name="hotspots_text" description="MOD_THIS_SPECIFIES_THE_TEXT_THAT" default="Info button with test link to pannellum" class="input-xlarge" size="32" maxlength="256" filter="" />
		<field type="url" label="MOD_HOTSPOTS_URL" name="hotspots_url" description="MOD_IF_SPECIFIED_FOR_AN_INFO_HOT" default="https://pannellum.org/" class="input-xlarge" size="32" maxlength="256" filter="" />
	</fieldset>

	<fieldset name="tour-scene" label="Scene Hot Spot (for Tours)">
		<field type="text" label="MOD_HOTSPOTS_SCENEID_LABEL" name="hotspots_sceneid" description="MOD_SPECIFIES_THE_ID_OF_THE_SCEN" default="" class="input-medium" size="32" maxlength="120" filter="" />
		<field type="text" label="MOD_TARGETPITCH" name="targetpitch" description="MOD_SPECIFIES_THE_PITCH_OF_THE_T" default="" class="input-mini" />
		<field type="text" label="MOD_TARGETYAW" name="targetyaw" description="MOD_SPECIFIES_THE_YAW_OF_THE_TAR" default="" class="input-mini" />
		<field type="text" label="MOD_TARGETHFOV" name="targethfov" description="MOD_SPECIFIES_THE_HFOV_OF_THE_TA" default="" class="input-mini" />
		<field type="text" label="MOD_SCENEFADEDURATION" name="scenefadeduration" description="MOD_SPECIFIES_THE_FADE_DURATION_" default="" class="input-mini" />
		<field type="text" label="MOD_HOTSPOTS_CSSCLASS" name="hotspots_cssclass" description="MOD_IF_SPECIFIED__STRING_IS_USED" default="" class="input-xlarge" size="32" maxlength="120" filter="" />
	</fieldset>
</form>