				<field type="text" label="MOD_FALLBACK" name="fallback" showon="type:equirectangular,equirectangular_hotspots,equirectangular_tour,cubemap,cubemap_hotspots,cubemap_tour[AND]optionalfields:1" description="MOD_IF_SET__THE_VALUE_IS_USED_AS" default="" class="" size="32" maxlength="250" filter="" />

