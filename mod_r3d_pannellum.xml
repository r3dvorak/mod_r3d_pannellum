					label="Optional"
					name="optionalfields"
					description="MOD_OPTIONAL_FIELDS_DESC"
					default="0"
					class="btn-group btn-group-yesno"
					>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field 
					type="radio"
					label="MOD_AUTOLOAD"
